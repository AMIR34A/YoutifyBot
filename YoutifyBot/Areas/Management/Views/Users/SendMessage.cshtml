@model SendMessageViewModel


<div class="card ">
    <form asp-action="SendMessage">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="card-header bg-light">
            Send Message to User @Model.FullName
        </div>
        <div class="card-body bg-">
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="Media"></label>
                    <input asp-for="Media" class="form-control " />
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-12">
                    <label asp-for="Text"></label>
                    <textarea asp-for="Text" class="form-control"></textarea>
                    <span asp-validation-for="Text" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button class="btn btn-light" type="submit">Send</button>
        </div>
    </form>
</div>

@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
